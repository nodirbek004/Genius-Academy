<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Academy.Api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Academy.Api.styles.css" asp-append-version="true" />
</head>
<body>
     <!--Navbar -->
     <header>
         <div class="container">
             <div class="nav">
                <a asp-controller="Home" asp-action="Index"><img class="logo" src="~/images/logo.png" /></a>
                 <a asp-controller="Home" asp-action="Booking" class="register-btn" style="color: white;">Register</a>
             </div>
         </div>
     </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
